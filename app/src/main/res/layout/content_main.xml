<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.techninja.sensei.weatherapp.Utilities.FontHelper"/>
        <import type="com.techninja.sensei.weatherapp.Utilities.Formatter" />
        <import type="com.techninja.sensei.weatherapp.Models.MainViewModel"/>
        <variable name="mainModel" type="com.techninja.sensei.weatherapp.Models.MainViewModel" />
    </data>

    <RelativeLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.techninja.sensei.weatherapp.MainActivity"
        tools:showIn="@layout/activity_main">

        <LinearLayout
            android:id="@+id/selectedCityView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/colorAccent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="end"
                    android:orientation="horizontal"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/icon_temp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginEnd="6dp"
                        android:paddingBottom="6dp"
                        android:text="@string/fa_thermometer"
                        bind:fontFamily="@{1}"
                        android:textColor="@color/colorInverseText"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/selectedCityTemp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="end"
                        android:layout_marginEnd="10dp"
                        android:text="@{mainModel.SelectedWeather !=null? Formatter.FormatTemp(mainModel.SelectedWeather.main.Temp):null}"
                        android:textColor="@color/colorInverseText"
                        android:textSize="14sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/selectedCityName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/icons_container"
                    android:layout_marginStart="4dp"
                    android:layout_toEndOf="@+id/icons_container"
                    android:text="@{mainModel.SelectedWeather.name}"
                    android:textColor="@color/colorInverseText"
                    android:textSize="35sp" />

                <TextView
                    android:id="@+id/icons_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="11dp"
                    android:layout_marginTop="40dp"
                    android:paddingBottom="6dp"
                    android:text="@string/fa_map_marker"
                    android:textColor="@color/colorInverseText"
                    bind:fontFamily="@{1}"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/selectedCityWeather"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/selectedCityName"
                    android:layout_marginStart="20dp"
                    android:text="@{mainModel.SelectedWeather !=null? mainModel.SelectedWeather.weather[0].Description:null}"

                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorInverseText" />

                <ImageView
                    android:id="@+id/weather_icon"
                    android:layout_width="100dp"
                    android:layout_height="fill_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/selectedCityWeather"
                    android:layout_marginBottom="2dp"
                    android:layout_marginEnd="20dp"
                    bind:imageResource="@{ mainModel.SelectedWeather !=null ? MainViewModel.GetIcon(mainModel.SelectedWeather.weather[0].icon): 0}"
                    android:contentDescription="Selected weather icon"
                    android:tint="@color/colorInverseText"
                    app:srcCompat="@drawable/ic_weather_na" />

                <TextView
                    android:id="@+id/selectedCityLoTempIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="start"
                    android:layout_marginStart="6dp"
                    android:paddingBottom="6dp"
                    bind:fontFamily="@{1}"
                    android:text="@string/fa_thermometer_lo"
                    android:textColor="@color/colorInverseText"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/selectedCityLoTemp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignStart="@id/selectedCityLoTemp"
                    android:layout_marginBottom="6dp"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@id/selectedCityLoTempIcon"
                    android:text="@{mainModel.SelectedWeather !=null? Formatter.FormatTemp(mainModel.SelectedWeather.main.TempMin):null}"
                    android:textColor="@color/colorInverseText"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/selectedCityHiTempIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="12dp"
                    android:layout_toEndOf="@id/selectedCityLoTemp"
                    android:paddingBottom="6dp"
                    android:text="@string/fa_thermometer_full"
                    bind:fontFamily="@{1}"
                    android:textColor="@color/colorInverseText"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/selectedCityHiTemp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="10dp"
                    android:layout_toEndOf="@id/selectedCityHiTempIcon"
                    android:paddingBottom="6dp"
                    android:text="@{mainModel.SelectedWeather !=null? Formatter.FormatTemp(mainModel.SelectedWeather.main.TempMax):null}"
                    android:textColor="@color/colorInverseText"
                    android:textSize="14sp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/selectedCityView"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Favorite Cities"
                android:textSize="30sp" />

            <ListView
                android:id="@+id/citiesList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                bind:cities="@{mainModel.WeatherData}"
            bind:model="@{mainModel}"
                />
        </LinearLayout>

    </RelativeLayout>
</layout>